{
  "expo": {
    "name": "Evermind",
    "slug": "evermind",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "evermind",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B82F6"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.evermind.app",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Evermind uses speech recognition to help you communicate through voice",
        "NSMicrophoneUsageDescription": "Evermind needs microphone access for voice commands and recording memories"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3B82F6"
      },
      "package": "com.evermind.app",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Evermind needs microphone access for voice commands and recording memories",
          "speechRecognitionPermission": "Evermind uses speech recognition to help you communicate through voice"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
